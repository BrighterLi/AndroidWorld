<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#EDEDEE" />
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1px"
        android:top="1px">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>