<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog.DialogTestActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_full_screen_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全屏dialog">
    </Button>

    <Button
        android:id="@+id/bt_full_screen_dialog_dynamic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全屏dialog动态添加dialog内容">
    </Button>
    <Button
        android:id="@+id/bt_alert_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AlertDialog">
    </Button>
</LinearLayout>